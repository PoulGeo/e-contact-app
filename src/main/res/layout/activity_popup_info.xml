<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dacfcf"
    tools:context="com.george.econtactdemo.PopupInfo">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView3"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="24dp"
                android:padding="7dp"
                android:text="Ο τρόπος που λειτουργεί η εφαρμογή είναι με βάση των συντεταγμένων του χώρου εργασίας σας"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="72dp"
                android:padding="7dp"
                android:text=" Για να επιτευχθεί η καταχώρυση των σωστών συντεταγμένων θα πρέπει να βρίσκεστε στον χώρο εργασίας σας και να κάνετε την εγγραφή απο εκεί ή να πατήσετε το κουμπι Ευρεση Συντεταγμένων και να γράψετε εσεις τις συντεταγμές της σωστής διεύθυνσης αφού κάνετε τα προαπαιτούμενα μέσα στην ιστοσελίδα που θα σας ανοίξει."
                android:textColor="#000"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>





</RelativeLayout>
